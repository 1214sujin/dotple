<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <!-- Appender 설정 -->
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %5p %l - %m%n"/>
        </Console>
    </Appenders>

    <!-- Logger 설정 -->
    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>

        <logger name="com.dotple" level="debug" additivity="false" >
            <AppenderRef ref="console" />
        </logger>
        <logger name="com.dotple.DotpleApplication" level="info" additivity="false">
            <AppenderRef ref="console"/>
        </logger>
    </Loggers>

</Configuration>